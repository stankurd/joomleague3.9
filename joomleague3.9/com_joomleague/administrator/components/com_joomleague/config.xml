			label="COM_JOOMLEAGUE_SETTINGS_SHOW_DEBUG_TITLE"
			class="switcher"
			description="COM_JOOMLEAGUE_SETTINGS_SHOW_DEBUG_DESCR">
			<option value="0">COM_JOOMLEAGUE_GLOBAL_NO</option>
			<option value="1">COM_JOOMLEAGUE_GLOBAL_YES</option>
