			class="switcher"
			label="COM_JOOMLEAGUE_SETTINGS_USE_SERVERSIDE_THUMBCREATION_CACHE"
			description="COM_JOOMLEAGUE_SETTINGS_USE_SERVERSIDE_THUMBCREATION_CACHE_DESC">
