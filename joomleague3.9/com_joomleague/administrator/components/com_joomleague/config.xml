			<option value="1">COM_JOOMLEAGUE_GLOBAL_YES</option>
		</field>
		<field name="use_prefilled_match_roster" type="list" default="0"
			label="COM_JOOMLEAGUE_SETTINGS_USE_PREFILLED_MATCH_ROSTER"
			description="COM_JOOMLEAGUE_SETTINGS_USE_PREFILLED_MATCH_ROSTER_DESCR">
			<option value="0">COM_JOOMLEAGUE_GLOBAL_NO</option>
			<option value="1">COM_JOOMLEAGUE_SETTINGS_MATCH_ROSTER_PREFILL_WITH_LAST_MATCH_ROSTER</option>
			<option value="2">COM_JOOMLEAGUE_SETTINGS_MATCH_ROSTER_PREFILL_WITH_PROJECTTEAM_PLAYERS</option>
			<option value="3">COM_JOOMLEAGUE_SETTINGS_MATCH_ROSTER_PREFILL_ASK</option>
			<option value="4">COM_JOOMLEAGUE_SETTINGS_MATCH_ROSTER_PREFILL_ASK_WHEN_NO_LINEUP_SET</option>
		</field>
