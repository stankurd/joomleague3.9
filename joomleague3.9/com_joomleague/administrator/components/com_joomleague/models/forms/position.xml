<?xml version="1.0" encoding="UTF-8"?>
<form
	addrulepath="/administrator/components/com_joomleague/models/rules"
	addfieldpath="/administrator/components/com_joomleague/models/fields">
	<fieldset name="details">
		<field
			name="name"
			type="text"
			label="COM_JOOMLEAGUE_GLOBAL_NAME"
			description="COM_JOOMLEAGUE_GLOBAL_NAME_DESC"
			class="inputbox"
			required="true"/>
		<field
			name="alias"
			type="text"
			label="COM_JOOMLEAGUE_GLOBAL_ALIAS"
			description="COM_JOOMLEAGUE_GLOBAL_ALIAS_DESC"
			class="inputbox"/>				
		<field
			name="sports_type_id"
			type="sportstypes"
			default="0"
			size="1"
			label="COM_JOOMLEAGUE_GLOBAL_SPORT_TYPE"
			required="true">
		</field>
		<field
			name="published"
			type="radio"
			class="btn-group btn-group-yesno"
			default="1"
			size="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option
				value="1">
				JPUBLISHED</option>
			<option
				value="0">
				JUNPUBLISHED</option>
		</field>
		<field
			name="persontype"
			type="list"
			class="inputbox"
			default="1"
			size="1"
			label="COM_JOOMLEAGUE_ADMIN_POSITION_PERSON_TYPE">
			<option
				value="1">
				COM_JOOMLEAGUE_F_PLAYERS</option>
			<option
				value="2">
				COM_JOOMLEAGUE_F_TEAM_STAFF</option>
			<option
				value="3">
				COM_JOOMLEAGUE_F_REFEREES</option>
			<option
				value="4">
				COM_JOOMLEAGUE_F_CLUB_STAFF</option>
		</field>
		<field name="ordering" type="text" label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC" size="6"
			default="0" />
		<field name="id" type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
		description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true" />
		
	</fieldset>
</form>